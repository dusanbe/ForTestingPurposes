<Window x:Class="WpfApplicationTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplicationTest1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="198*"/>
            <ColumnDefinition Width="259*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Label Content="Aca" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
        <Label Content="Maca" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Label Content="Zaca" Grid.Column="2" Grid.Row="0"/>

        <DockPanel Grid.Column="2" Grid.Row="1" Grid.RowSpan="2">
            <Label Content="Faca" DockPanel.Dock="Bottom" Background="Blue"/>
            <Label Content="Faca" DockPanel.Dock="Right" Background="Green"/>
            <Label Content="Faca" DockPanel.Dock="Right" Background="Red"/>

        </DockPanel>

    </Grid>

</Window>
